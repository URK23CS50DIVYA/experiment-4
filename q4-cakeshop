<script>
function calculate(){

    let q1 = document.getElementById("c1").value || 0;
    let q2 = document.getElementById("c2").value || 0;
    let q3 = document.getElementById("c3").value || 0;
    let q4 = document.getElementById("c4").value || 0;

    let total = (q1*300) + (q2*200) + (q3*250) + (q4*350);

    document.getElementById("totalPrice").innerHTML =
    "Total Price = ₹" + total;
}
